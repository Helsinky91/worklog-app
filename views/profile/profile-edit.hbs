<div>

    <h1>Edit your information</h1>

 {{#with userDetails}}

    <form action="/profile/edit/{{_id}}" method="POST">
        <label for="firstName">Worker's first name</label>
        <input type="text" name="firstName" value="{{firstName}}">
<br>
        <label for="lastName">Worker's last name:</label>
        <input type="text" name="lastName" value="{{lastName}}">
<br>
        <label for="email">email</label>
        <input type="email" name="email" value="{{email}}">
<br>
                      
 {{!--to choose from the interest (eventType) in Model or just create a form as in the event-edit.hbs  }} --}}
 {{!--to choose a profile pic}} --}}

    <button>Submit changes</button>
    </form>
    <br><br>
 {{/with}}

 {{#if adminRole}}
     <select name="department" multiple="false" >
            <option value="{{userDetails.department}}" selected="true">{{userDetails.department}}</option>
            <option value="cook">Cook</option>
            <option value="receptionist">Receptionist</option>
            <option value="restaurant">Restaurant</option>
            <option value="reservations">Reservations</option>
        </select>

    <form action="/admin/{{userDetails._id}}/delete" method="POST">
        <button  style="color: red">Delete this worker</button>
    </form>
    {{/if}}
</div>


