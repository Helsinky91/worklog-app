{{!--reder user and admin profile --}}

<div>
    {{!-- si hay algo vaci√≥, sale comentario que alerta y los campos estan en rojo--}}
    <h2>My profile</h2>
    {{#with userDetails}}
    <img src="{{photo}}" alt="{{fistName}}'s pic" width="150px">
    <h3>Worker's name: {{firstName}} {{lastName}}</h3>
    <h3>email: {{email}}</h3>
    <h3>Department: {{department}}</h3>
    <h3>Interested in: {{interest}}</h3> {{!--esto es un dropdown!!--}}
    {{/with}}
    <button type="button" class="btn btn-outline-primary"><a href="/profile/edit/{{userDetails._id}}"> Edit</a></button>
    <br>    
   <hr class="border border-primary border-3 opacity-75">

    {{#if isWorking}}
    <h1>Your work state <span style="color: rgb(70, 159, 189)">Active</span></h1>
    {{else}}
    <h1>Your work state <span style="color: red">Inactive</span></h1>
    {{/if}}
    <h2>WORKLOG time in: {{formatedWorklogDatesIn}} {{formatedWorklogHoursIn}}</h2>

{{#each worklogDatesIn}}   
    <h2>WORKLOG comment: {{comment}}</h2>
{{/each}}
    <h2>WORKLOG time out: {{formatedWorklogDatesOut}} {{formatedWorklogHoursOut}}</h2>
{{#each worklogDatesOut}}
    <h2>WORKLOG comment: {{comment}}</h2>
{{/each}} 
    <br>
     {{#if isWorking}}
    <form action="/profile/log-out" method="POST">

        <label for="comment">Write a comment:</label>
        <input type="text" name="comment" required="true">

        <br>
        <label for="user"></label>
        <input type="text" name="user" hidden="true" value="{{userDetails._id}}">
         <label for="timeOut">
        <input type="date" name="timeOut" hidden="true"></label>
        <button>WORK LOG OUT</button>
    </form>
{{else}}
    <form action="/profile/log-in" method="POST">

        <label for="comment">Write a comment:</label>
        <input type="text" name="comment" required="true">
        <br>
        <label for="user"></label>
        <input type="text" name="user" hidden="true" value="{{userDetails._id}}">
        <label for="timeIn">
        <input type="date" name="timeIn" hidden="true"></label>
        <button>WORK LOG IN</button>

    </form>
    {{/if}}
<hr class="border border-primary border-3 opacity-75">

    <h2>My next Events</h2>
    {{!-- carrusel eventos --}}
    {{#each userEventsList}}
    
    <img src="{{photo}}" alt="event photo" width="150px">
    <li>Name: {{name}}</li>
    <li>Place: {{place}}</li>
    <li>Date {{date}} - {{hour}}</li>
    <li>Description: {{description}}</li>
    <form action="/events/{{_id}}/delete-fav" method="POST"><button>I'm not interested</button></form>
    {{/each}}
    <a href="/events">See events</a>
    <div class="spinner-grow text-danger" role="status">
  <span class="visually-hidden">Loading...</span>
</div>

</div>
