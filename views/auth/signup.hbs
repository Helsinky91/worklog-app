<div>
    <h1 class="section-title">Create your account</h1>
   
   <form action="/auth/signup" method="POST">

        <div >
            <label for="firstName" class="form-label"></label>
            <input type="text" name="firstName" class="form-control" placeholder="Name" >
        </div>
        <div >
            <label for="email" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text" id="inputGroupPrepend2">@</span>
                    <input type="email" name="email" class="form-control" placeholder="Email" >
                </div>
        </div>
        <div >
            <label for="password" class="form-label"></label>
            <input type="password" name="password" class="form-control" placeholder="Password" >
        </div>

        <div >
            <label for="department" class="form-label"></label>
            <select class="form-select form-select-departm" name="department" >
                <option selected disabled value="">Select your department</option>
                <option value="Cook">Cook</option>
                <option value="Receptionist">Receptionist</option>
                <option value="Restaurant">Restaurant</option>
                <option value="Reservations">Reservations</option>
             </select>                
            </select>
      </div>      
       <div><p style="color: red"><strong>{{errorMessage}}</strong></p> </div>
        
        <button class="btn">Sign up</button>
    </form>

</div>
