                        {{/each}}

                    </ul>
                    <form action="/admin/{{_id}}/edit" method="POST">
                        <label for="validation">Validation: </label>
                        <select  class="validate-form" name="validation" >
                            <option selected="true" disabled="disabled">Choose one</option>
                            {{#each ../validation}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                        <button class="btn-validation">Submit</button>
                    </form>
                    <hr width="250px">
                    {{else}}
                    <p>Not pending validations for this worker</p>
                {{/if}}
            </div>
    </div>
</div>



