
     <div class="one-line-display">
        <h1 class="section-title"> {{userDetails.firstName}} {{userDetails.lastName}}</h1>
        <form>
            <input class="back-btn left-space btn-size" type="button" value="Go back!" onclick="history.back()">
        </form>
    </div>

<div class="container">
        <h2>Pending</h2>
    <div class="row">
            <div class="col-sm ">
                <h3 style="color: blue">Worklogs in</h3>
                        {{#if datesPendingIn}}
                <ul>
                    {{#each pendingIn}}
                    <li>{{datesPendingIn}} - {{hoursPendingIn}}</li>
                    <li class="comment">Comment: {{comment}}</li>
                </ul>
                    {{!--partials con el c√≥digo del form debajo --}}
                <form action="/admin/{{_id}}/edit" method="POST">
                    <label for="validation">Validation: </label>
                    <select class="validate-form" name="validation" >
                        {{#each ../validation}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                    <button class="btn-validation">Submit</button>
                </form>
                <hr width="250px">
                    {{/each}}
                {{else}}
                <p>Not pending validations for this worker</p>
                {{/if}}
            </div>
            <div class="col-sm ">
                <h3 style="color: blue">Worklogs out</h3>
                     {{#if datesPendingOut}}
                        <ul>
                        {{#each pendingOut}}
                        <li>{{datesPendingOut}} - {{hoursPendingOut}}</li>
                        <li class="comment">Comment: {{comment}}</li>
                    </ul>
                    <form action="/admin/{{_id}}/edit" method="POST">
                        <label for="validation">Validation: </label>
                        <select  class="validate-form" name="validation" >
                            {{#each ../validation}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                        <button class="btn-validation">Submit</button>
                    </form>
                    <hr width="250px">
                        {{/each}}
                    {{else}}
                    <p>Not pending validations for this worker</p>
                {{/if}}
            </div>
    </div>
</div>


