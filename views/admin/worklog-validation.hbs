<div>
    <h2>Pending</h2>
    <div>
    <h3 style="color: blue">Worklogs in</h3>
            {{#if datesPendingIn}}
        <ul>
            <li>{{datesPendingIn}} - {{hoursPendingIn}}</li>
            {{#each pendingIn}}
            <li class="comment">Comment: {{comment}}</li>
        </ul>
            {{!--partials con el c√≥digo del form debajo --}}
        <form action="/admin/{{_id}}/edit" method="POST">
            <label for="validation">Validation: </label>
            <select name="validation" multiple="false" >
                {{#each ../validation}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
            <button>Submit</button>
        </form>
            {{/each}}
        {{else}}
        <p>Not pending validations for this worker</p>
        {{/if}}
    </div>
