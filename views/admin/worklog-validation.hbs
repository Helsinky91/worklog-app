
     <div class="one-line-display">
        <h1 class="section-title"> {{userDetails.firstName}} {{userDetails.lastName}}</h1>
        <form>
            <input class="back-btn left-space btn-size" type="button" value="Go back!" onclick="history.back()">
        </form>
    </div>

<div class="container">
        <h2>Pending</h2>
    <div class="row">
            <div class="col-sm ">
                <h3 style="color: blue">Worklogs in</h3>
                        {{#if datesPendingIn}}
                <ul>
                    <li><span class="resalted">Day: </span>{{datesPendingIn}}</li>
                    <li><span class="resalted">Hour: </span>{{hoursPendingIn}}</li>
                    {{#each pendingIn}}
                    <li><span class="resalted">Comment: </span><span class="comment">{{comment}}</span></li>
                    {{/each}}
                
                </ul>
                    {{!--partials con el c√≥digo del form debajo --}}
                <form action="/admin/{{_id}}/edit" method="POST">
                    <label for="validation">Validation: </label>
                    <select class="validate-form" name="validation" >
                        <option selected="true" disabled="disabled">Choose one</option>
                        {{#each ../validation}}
                        <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                    <button class="btn-validation">Submit</button>
                </form>
                <hr width="250px">
                {{else}}
                <p>Not pending validations for this worker</p>
                {{/if}}
            </div>
            <div class="col-sm ">
                <h3 style="color: blue">Worklogs out</h3>
                     {{#if datesPendingOut}}
                        <ul>
                       <li><span class="resalted">Day: </span>{{datesPendingOut}}</li>
                       <li><span class="resalted">Hour </span>{{hoursPendingOut}}</li>
                        {{#each pendingOut}}
