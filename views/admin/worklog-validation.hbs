<div>
    <h2>Worker's name: {{userDetails.firstName}} {{userDetails.lastName}}</h2>
<div>
<ul>
    <h2>Pending</h2>
    <h3>Worklogs in</h3>
    {{#each pendingValidationIn}}
        <li>{{timeIn}}</li>
        <h4>Comment: {{comment}}</h4>
        {{!--partials con el c√≥digo del form debajo --}}
         <form action="/admin/{{_id}}/edit" method="POST">
         <label for="validation">Validation: </label>
        <select name="validation" multiple="false" >
            {{#each ../validation}}
             <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
        <button>Submit</button>
    </form>
    {{/each}}


    <h3>Worklogs out</h3>
      {{#each pendingValidationOut}}
